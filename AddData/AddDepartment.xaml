<Window
    x:Class="CompanyData.AddData.AddDepartment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CompanyData.AddData"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="New Department"
    WindowStartupLocation="CenterScreen"
    Width="300"
    Height="400"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="25" HorizontalAlignment="Center">
            <TextBlock Margin="0,10,0,0" Text="Department number" />
            <TextBox
                Name="deptnoNumber"
                Width="180"
                Height="20" />
            <TextBlock Margin="0,10,0,0" Text="Department name" />
            <TextBox Name="deptnoName"
                Width="180"
                Height="20"
                 />
            <TextBlock Margin="0,10,0,0" Text="Department location" />
            <TextBox Name="deptnoLocation"
                Width="180"
                Height="20"
                 />

            <Button
                Width="180"
                Height="35"
                Margin="0,50,0,0"
                Background="#32a852"
                Content="Save"
                FontSize="16"
                Click="SaveDepartment"
                Foreground="White" />

        </StackPanel>
    </Grid>
</Window>
